version: "3.8"

services:
  # --- Reverse Proxy ---
  traefik:
    image: traefik:v3.0
    container_name: traefik
    command:
      - "--providers.docker=true"
      - "--providers.docker.exposedbydefault=false"
      - "--api.insecure=true"
    ports:
      # App Access: http://<MINI_PC_IP>:8080
      - "8080:80"
      # Traefik Dashboard: http://<MINI_PC_IP>:8081
      - "8081:8080"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
    restart: unless-stopped
    networks:
      - default

  # --- Database ---
  db:
    image: postgres:15
    restart: unless-stopped
    environment:
      POSTGRES_USER: ${POSTGRES_USER}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
      POSTGRES_DB: ${POSTGRES_DB}
    volumes:
      # Keeps your data in the standard CasaOS location
      - /DATA/AppData/training-plan/postgres_data:/var/lib/postgresql/data
    networks:
      - default

  # --- Backend API ---
  api:
    image: ghcr.io/sebastiendesalle/trainingdevopsplan-api:latest
    restart: unless-stopped
    depends_on:
      - db
    environment:
      DATABASE_URL: ${DATABASE_URL}
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.api.rule=PathPrefix(`/api`)"
      - "traefik.http.services.api.loadbalancer.server.port=3000"
    networks:
      - default

  # --- Background Worker ---
  worker:
    image: ghcr.io/sebastiendesalle/trainingdevopsplan-worker:latest
    restart: unless-stopped
    depends_on:
      - db
    environment:
      DATABASE_URL: ${DATABASE_URL}
      GARMIN_USER: ${GARMIN_USER}
      GARMIN_PASS: ${GARMIN_PASS}
    labels:
      - "traefik.enable=false"
    networks:
      - default

  # --- Frontend ---
  web:
    image: ghcr.io/sebastiendesalle/trainingdevopsplan-web:latest
    restart: unless-stopped
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.web.rule=PathPrefix(`/`)"
      # TELLS TRAEFIK THAT NGINX IS LISTENING ON PORT 80
      - "traefik.http.services.web.loadbalancer.server.port=80"
    networks:
      - default

networks:
  default:
    name: trainingdevopsplan_default